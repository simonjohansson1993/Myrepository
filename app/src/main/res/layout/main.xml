<?xml version="1.0"?>

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444444"
            android:textSize="20dp" />


        <Button
            android:id="@+id/bluetooth_connect_btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/linearLayout1"
            android:layout_alignBottom="@+id/linearLayout1"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:text="CONNECT"
            android:textStyle="italic"
            android:layout_alignLeft="@+id/linearLayout1" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_joystick"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="104dp"
        android:layout_toEndOf="@+id/linearLayout1"
        android:background="@drawable/image_button_bg"
        android:layout_marginLeft="-10dp"
        android:layout_toRightOf="@+id/linearLayout1"></RelativeLayout>

    <Button
        android:id="@+id/on_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="23dp"

        android:text="LED ON"
        android:textStyle="italic"
        android:theme="@style/Widget.AppCompat.Button" />

    <Button
        android:id="@+id/off_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="23dp"
        android:text="LED OFF"
        android:textStyle="italic" />


    <Switch
        android:id="@+id/go_auto"
        android:layout_width="89dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="296dp"
        android:layout_marginLeft="296dp"
        android:layout_marginTop="151dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:text="Auto mode"

        android:textStyle="italic" />


    <TextView
        android:id="@+id/reading"
        android:layout_width="69dp"
        android:layout_height="31dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="173dp"
        android:layout_marginRight="173dp"
        android:layout_marginBottom="57dp" />

    <SeekBar
        android:id="@+id/seekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="161dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="123dp"
        android:layout_marginRight="123dp"
        android:layout_marginBottom="78dp"
        android:max="5"
        android:progress="0"
        android:scaleX="1.5"
        android:scaleY="1.5" />

    <ImageView
        android:id="@+id/car_logo"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="-9dp"
        android:layout_marginRight="-9dp"
        android:layout_toStartOf="@+id/off_button"
        android:layout_toLeftOf="@+id/off_button"
        android:src="@drawable/car_logo" />

    <TextView
        android:id="@+id/car_logo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="-194dp"
        android:layout_marginRight="-194dp"
        android:layout_toStartOf="@+id/layout_joystick"
        android:layout_toLeftOf="@+id/layout_joystick"
        android:text="Welcome to Remote Car"
        android:textSize="20dp"
        android:textStyle="italic"

        />


</RelativeLayout>
